# TalkAvocado Environment Configuration
# Copy this file to .env and customize as needed

# Core Configuration
TALKAVOCADO_ENV=dev
MEDIA_STORAGE_PATH=./storage

# AWS (POC Lambda path) - leave blank if unused
AWS_REGION=
AWS_S3_BUCKET=

# Azure (MyGrowthApp compatibility) - leave blank if unused
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER=

# Transcription (WP01-02)
WHISPER_MODEL=medium
WHISPER_LANGUAGE=en

# Video Render Engine (WP01-04)
RENDER_CODEC=h264
RENDER_PRESET=fast
RENDER_CRF=20
RENDER_FPS=30
RENDER_THREADS=2
RENDER_AUDIO_CODEC=aac
RENDER_AUDIO_BITRATE=192k

# Video Transitions (WP01-05)
# Enable transitions between keep segments
TRANSITIONS_ENABLED=false
# Transition type (currently only 'crossfade' supported)
TRANSITIONS_TYPE=crossfade
# Transition duration in milliseconds (default: 300ms)
TRANSITIONS_DURATION_MS=300
# Audio fade duration in milliseconds (default: matches TRANSITIONS_DURATION_MS)
TRANSITIONS_AUDIO_FADE_MS=300

# FFmpeg Runtime (WP00-03)
# Optional: specify paths if ffmpeg/ffprobe are not on PATH
FFMPEG_PATH=
FFPROBE_PATH=

# CI Toggles
ENABLE_NODE_CI=true
ENABLE_PYTHON_CI=true
