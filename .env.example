# TalkAvocado Environment Variables Example
# Copy this file to .env and configure as needed

# Smart Cut Planner (WP01-03)
# Minimum pause duration in milliseconds to consider as a cut point
PLANNER_MIN_PAUSE_MS=1500

# Comma-separated list of filler words/phrases to remove
PLANNER_FILLER_WORDS=um,uh,like,you know,so,actually

# Minimum duration in seconds for a cut segment to be kept
PLANNER_MIN_CUT_DURATION_SEC=0.5

# Minimum duration in seconds for a keep segment
PLANNER_MIN_SEGMENT_DURATION_SEC=3.0

# Maximum duration in seconds for a keep segment (will be split if longer)
PLANNER_MAX_SEGMENT_DURATION_SEC=300.0

# Threshold in milliseconds for merging adjacent cut regions
PLANNER_MERGE_THRESHOLD_MS=500

# Enable deterministic mode (disables non-deterministic features like GPT)
DETERMINISTIC=true

# Enable GPT-based planning (disabled when DETERMINISTIC=true)
ENABLE_GPT_PLANNER=false


# Video Render Engine (WP01-04)
# Video codec for rendering (h264)
RENDER_CODEC=libx264
# FFmpeg preset for encoding (fast, medium, slow, etc.)
RENDER_PRESET=fast
# Constant Rate Factor for quality (0-51, lower is better quality)
RENDER_CRF=20
# Target frame rate for output video
RENDER_FPS=30
# Number of threads for encoding
RENDER_THREADS=2
# Audio codec for rendering
RENDER_AUDIO_CODEC=aac
# Audio bitrate for rendering
RENDER_AUDIO_BITRATE=192k
# FFmpeg path (optional, uses PATH if not set)
FFMPEG_PATH=
# FFprobe path (optional, uses PATH if not set)
FFPROBE_PATH=
